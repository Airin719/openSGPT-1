<UserControl x:Class="openSGPT.pruebas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:openSGPT"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Margin="3,3,3,3">
        <DockPanel Margin="0,1,0,-1">
            <Menu x:Name="menu" DockPanel.Dock="Top" HorizontalAlignment="Left" Height="20" Margin="0,0,0,0" VerticalAlignment="Top" >
                <MenuItem Name="menuArchivos" Header="Archvivo">
                    <MenuItem Name="menuSalir" Header="Salir/Cerrar" />
                </MenuItem>
                <MenuItem Name="menuAyuda" Header="ayuda" HorizontalAlignment="Right">
                    <MenuItem Name="menuInformacion" Header="Informacion"/>
                </MenuItem>
            </Menu>
        </DockPanel>    
        
    </Grid>
    
</UserControl>
